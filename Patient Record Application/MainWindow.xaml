<Window x:Class="Patient_Record_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Patient Record Application" Height="700" Width="800">

    <!--Main Grid-->
    <Grid Background="#FFCADFF0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Patient Id block-->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="left" FontSize="16" FontWeight="Bold">
           Patient ID :
            </TextBlock>
            <TextBlock Margin="5,0"  FontSize="16">10001</TextBlock>
        </StackPanel>

        <!--Date block-->
        <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="10">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="left" FontSize="16" FontWeight="Bold">
           Date :
            </TextBlock>
            <TextBlock Margin="5,0" FontSize="16" Name="date_time"/>
        </StackPanel>

        <!--Title block-->
        <TextBlock Grid.ColumnSpan="3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="center"  FontSize="20" FontWeight="Bold" TextDecorations="Underline" MinWidth="200">
            Patient Registration Information
        </TextBlock>

        <!--First sub Grid-->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="10"  HorizontalAlignment="Center"  VerticalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" MinWidth="200"/>
                <ColumnDefinition Width="50*" MinWidth="400" MaxWidth="600"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!--Name block-->
            <StackPanel Margin="10" Grid.Row="0" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold" > Name :</TextBlock>
            </StackPanel>
            <TextBox Grid.Column="1" MinHeight="20" MaxHeight="30" Name="fName" HorizontalAlignment="Stretch"/>

            <!--Address block-->
            <StackPanel Margin="10" Grid.Row="1" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold"> Address :</TextBlock>
            </StackPanel>
            <TextBox Grid.Row="1" Grid.Column="1" MinHeight="20" MaxHeight="30" Name="Address"/>

            <!--Gender block-->
            <StackPanel Margin="10" Grid.Row="2" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold"> Gender :</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center">
                <RadioButton Name="Male" FontSize="14" MinWidth="100">Male</RadioButton>
                <RadioButton Name="Female" FontSize="14">Female</RadioButton>
            </StackPanel>

            <!--Birthdate block-->
            <StackPanel Margin="10" Grid.Row="3" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold"> Birthdate :</TextBlock>
            </StackPanel>
            <DatePicker Grid.Row="3" Grid.Column="2" MinHeight="20" MaxHeight="30" Name="Date"/>

            <!--Age block-->
            <StackPanel Margin="10" Grid.Row="4" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold"> Age :</TextBlock>
            </StackPanel>
            <TextBox Grid.Row="4" Grid.Column="1" MinHeight="20" MaxHeight="30" Name="Age"/>

            <!--Image block-->
            <StackPanel Margin="10" Grid.Row="5" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold"> Image :</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox Grid.Column="2" MinWidth="350" MaxWidth="400" MinHeight="20" MaxHeight="30"/>
                <Button  MinWidth="50" MaxWidth="95" MinHeight="30" MaxHeight="30" FontSize="14" Margin="2" Background="#142850" Foreground="White">Browse</Button>
            </StackPanel>

            <!--Image view block-->
            <StackPanel Margin="10" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left">
                <Image Name="profileViewer" MinWidth="95" MaxWidth="150" MinHeight="95" MaxHeight="150"/>
            </StackPanel>

            <!--Department block-->
            <StackPanel Margin="10" Grid.Row="7" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold"> Department :</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="7" Grid.Column="1" VerticalAlignment="Center">
                <ComboBox FontSize="14" MinHeight="20" MaxHeight="30">
                    <ComboBoxItem IsSelected="True">Orthopedic</ComboBoxItem>
                    <ComboBoxItem>Cardiology</ComboBoxItem>
                    <ComboBoxItem>Neurology</ComboBoxItem>
                    <ComboBoxItem>Oncology</ComboBoxItem>
                    <ComboBoxItem>Obstetrics and Gynaecology</ComboBoxItem>
                    <ComboBoxItem>Cardiovascular ICU</ComboBoxItem>
                </ComboBox>
            </StackPanel>
    
            <!--Ward Block-->
            <StackPanel Margin="10" Grid.Row="8" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold"> Ward :</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="8" Grid.Column="1" VerticalAlignment="Center">
                <ComboBox FontSize="14" MinHeight="20" MaxHeight="30" >
                    <ComboBoxItem IsSelected="True">Cardiology Ward</ComboBoxItem>
                    <ComboBoxItem>Neurology Ward</ComboBoxItem>
                    <ComboBoxItem>Oncology Ward</ComboBoxItem>
                    <ComboBoxItem>Obstetrics and Gynaecology Ward</ComboBoxItem>
                    <ComboBoxItem>Maternity Ward</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <!--Doctor Block-->
            <StackPanel Margin="10" Grid.Row="9" HorizontalAlignment="Right">
                <TextBlock Margin="30,0" FontSize="16" FontWeight="Bold">Doctor In Charge :</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="9" Grid.Column="1" VerticalAlignment="Center">
                <ComboBox FontSize="14" MinHeight="20" MaxHeight="30">
                    <ComboBoxItem IsSelected="True">Dr Asala Perera</ComboBoxItem>
                    <ComboBoxItem>Dr. Janaka Thisera</ComboBoxItem>
                    <ComboBoxItem>Dr. Manik Perera</ComboBoxItem>
                    <ComboBoxItem>Dr. Seetha Fonseka</ComboBoxItem>
                    <ComboBoxItem>Dr. Athula Dissanayake</ComboBoxItem>
                </ComboBox>
            </StackPanel>

        </Grid>

        <!--Buttons Section-->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" >
            <Button Margin="5" Height="30"  Width="90" FontSize="14" Background="#142850" Foreground="White" Click="Button_Click">Print Review</Button>
            <Button Margin="5" Height="30" Width="80" FontSize="14" Background="#142850" Foreground="White">Clear</Button>
        </StackPanel>

    </Grid>
</Window>
